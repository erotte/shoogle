- remote_form_for( :foot, :url => {:action => 'add_target_shoe'}, :update => 'forecast_shoes_form', :complete => '$("#forecast_shoes_form").show(); init_shoe_completer();  $("#foot_fields input.manufacturer").focus(); $("#search_shoes_submit").val("Ändern")', :html => {:class => "foot_shoes_form", :id => "searched_shoe_form" }) do |foot|
  .forecast
    %h3
      =radio_button_tag :with_searched_shoe, 'true', true 
      =label_tag :with_searched_shoe_true, "Ich möchte nach einem bestimmten Schuh oder einer Marke suchen"
    .shoe_row.shoe_completer
      %span#searched_shoe_intro In welcher Größe passt mir von
      = text_field_tag "manufacturer", params[:manufacturer], :class => "manufacturer passive", :id => "manufacturer", :value => "Hersteller"
      %span.model
        das Modell 
        = text_field_tag "model", params[:model], :class => "model passive", :id => "model", :value => "Modell"
      ?
      %ul#search_options
        %li=link_to( "Nur nach Marke suchen", "#", :id => "toggle_model_search" )  

    %h3  
      =radio_button_tag :with_searched_shoe, 'false', false 
      =label_tag :with_searched_shoe_false, "Ich möchte einfach passende Schuhe suchen, egal von welchem Hersteller."


    %p.tar= submit_tag 'Weiter', :id => "searched_shoe_submit",  :class => 'awesome orange'
      
    
