<h1>New foot</h1>

<% form_for  :foot,  :url => feet_path do |footform| %>
  <%= footform.error_messages %>
  <table border="0" cellspacing="5" cellpadding="5">
    <tr>
      <th>Hersteller</th>
      <th>Modell</th>
      <th>Größe</th>
    </tr>
    <% footform.fields_for :shoes do |shoeform| %>
	  <tr>
	    <td>
	      <%= shoeform.text_field :manufacturer %>
	    </td>
	    <td>
	      <%= shoeform.text_field :model %>
	    </td>
	    <td>
	    <%= shoeform.text_field :size %>
	    </td>
    </tr>
    <% end %>
  </table>

  <p>
    <%= footform.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', feet_path %>