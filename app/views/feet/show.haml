
%h1 deine Schuhe:

- form_for @foot, :html => {:class => 'foot_shoes_form'} do |footform| 
  = footform.error_messages
  = footform.radio_button(:gender, 'm') 
  = footform.label "gender_m", "Herrengröße"
  
  = footform.radio_button(:gender, 'f') 
  = footform.label "gender_f",  "Damengröße"
  
  %table.footform
    %tr
      %th Hersteller
      %th Modell
      %th Größe
    = render :partial => 'shoe_fields',  :locals => {:subform => footform, :disabled  => true} 
    %tr#insert_shoe_button_row
      %td{ :colspan =>"3"}
      -# %td=  add_shoe_button(shoe) 

  %p.tar.buttonbox
    = footform.submit 'Speichern und Ergebnisse anzeigen'

  #matching_shoes
    =render :partial => 'fitting_shoe'
    =render :partial => 'similar_shoe'
  

= link_to 'Edit', edit_foot_path(@foot) 
|
= link_to 'Back', feet_path 