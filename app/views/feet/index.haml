%h1 Listing Feet and Shoes
    
- @feet.each do |foot|
  %br 
  =link_to("Anzeigen", foot)
  |
  =link_to 'Fuß löschen', foot, :confirm => 'Wirklich löschen?', :method => :delete
  |
  =link_to("passende Schuhe suchen", search_url(foot))
  |
  =link_to("weitere passende Schuhe", more_fitting_url(foot))
  |
  =link_to "Check", foot_check_path(foot), :id => 'foot_check'
  
  %table{:border => 1, :cellpadding => 4 }
    - foot.shoes.each do |shoe|
      %tr
        %td=shoe.manufacturer
        %td=shoe.model
        %td=shoe.size
        %td=link_to("Bearbeiten", edit_shoe_path(shoe))
        %td=link_to 'Schuh löschen', shoe, :confirm => 'Wirklich löschen?', :method => :delete
  
